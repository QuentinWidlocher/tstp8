{
  "name": "tstp8",
  "version": "0.2.4",
  "description": "Convert your Typescript project to Pico-8 Lua",
  "keywords": [
    "typescript",
    "pico8",
    "lua"
  ],
  "author": "QuentinWidlocher",
  "repository": "https://github.com/quentinWidlocher/tstp8",
  "license": "GPL-3.0-only",
  "private": false,
  "scripts": {
    "build": "bun build ./src/index.ts --production --target bun --banner \"#!/usr/bin/env bun\" --external pnpapi --external typescript --outfile ./out/tstp8",
    "dev": "bun run ./src/index.ts"
  },
  "types": "./src/declarations/pico8-global.d.ts",
  "module": "./src/declarations/constants.ts",
  "files": [
    "./src/declarations/pico8-global.d.ts",
    "./src/declarations/constants.ts"
  ],
  "exports": {
    ".": {
      "types": "./src/declarations/pico8-global.d.ts",
      "import": "./src/declarations/pico8-global.d.ts",
      "require": "./src/declarations/pico8-global.d.ts"
    },
    "./constants": {
      "import": "./src/declarations/constants.ts",
      "types": "./src/declarations/constants.ts"
    }
  },
  "bin": {
    "tstp8": "./out/tstp8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "type-fest": "^5.2.0",
    "oxc-transform": "^0.97.0",
    "zod": "^4.1.12",
    "typescript-to-lua": "^1.33.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  }
}
